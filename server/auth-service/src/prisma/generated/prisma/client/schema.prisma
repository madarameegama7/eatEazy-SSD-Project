generator client {
  provider      = "prisma-client-js"
  output        = "./generated/prisma/client"
  binaryTargets = ["windows", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshTokens {
  TokenID   Int      @id @default(autoincrement()) @map("tokenid")
  Token     String   @unique @map("token")
  UserID    Int      @map("userid")
  ExpiresAt DateTime @map("expiresat")
  CreatedAt DateTime @default(now()) @map("createdat")
  UpdatedAt DateTime @updatedAt @map("updatedat")

  user Users @relation(fields: [UserID], references: [UserID])

  @@map("refreshtokens")
}

model Users {
  UserID       Int        @id @default(autoincrement()) @map("userid")
  Firstname    String     @map("firstname") @db.VarChar(255)
  Lastname     String     @map("lastname") @db.VarChar(255)
  PasswordHash String     @map("passwordhash") @db.VarChar(255)
  Email        String     @unique @map("email") @db.VarChar(255)
  Phone        String?    @map("phone") @db.VarChar(15)
  Role         Users_Role @map("role")

  refreshTokens RefreshTokens[]

  @@map("users")
}

enum Users_Role {
  Admin
  Restaurant
  Customer
  DeliveryPerson

  @@map("users_role")
}
