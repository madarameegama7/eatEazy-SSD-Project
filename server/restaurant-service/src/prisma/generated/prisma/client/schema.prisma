generator client {
  provider      = "prisma-client-js"
  output        = "./generated/prisma/client"
  binaryTargets = ["windows", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurants {
  RestaurantID   Int     @id @default(autoincrement()) @map("restaurantid")
  OwnerID        Int?    @map("ownerid")
  RestaurantName String  @map("restaurantname") @db.VarChar(255)
  Address        String  @map("address") @db.Text
  Phone          String? @map("phone") @db.VarChar(15)
  Email          String? @map("email") @db.VarChar(255)
  Availability   String  @map("availability") @db.VarChar(255)

  MenuItems MenuItems[]

  @@map("restaurants")
}

model MenuItems {
  MenuItemID   Int      @id @default(autoincrement()) @map("menuitemid")
  RestaurantID Int?     @map("restaurantid")
  Name         String   @map("name") @db.VarChar(255)
  Description  String?  @map("description") @db.Text
  Price        Decimal  @map("price") @db.Decimal(10, 2)
  IsAvailable  Boolean? @default(true) @map("isavailable")

  Restaurants Restaurants? @relation(fields: [RestaurantID], references: [RestaurantID], onDelete: Cascade, onUpdate: NoAction, map: "menuitems_ibfk_1")

  @@index([RestaurantID], map: "restaurantid")
  @@map("menuitems")
}
